amends "package://pkg.pkl-lang.org/github.com/vault-courier/vault-courier-pkl/vault-courier-pkl@0.2.0#/Payloads/SecretEngines/Database/PostgreSQL/PostgresRole.pkl"

import ".../pgConnection.pkl"

name = "dynamic_migrator_role"
db_connection_name = pgConnection.connection
default_ttl = 2.min
max_ttl = 5.min
creation_statements {
  "CREATE ROLE \"{{name}}\" WITH SUPERUSER LOGIN PASSWORD '{{password}}';"
}
credential = new PasswordCredential {}
